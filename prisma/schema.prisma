generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:123456789@127.0.0.1:3306/card_encryptor"
}

model Cards {
  id            String   @id
  encryptedCard String   @db.LongText()
  createdAt     DateTime

  @@map("cards")
}

model Applications {
  id          String @id
  appId       String @unique
  description String
  secretKey   String

  @@map("applications")
}
